{
  "name": "static.pearcommerce.com",
  "description": "A Vue.js project",
  "author": "Alex Wyler <alex.s.wyler@gmail.com>",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "serve": "http-server -o -s -c 1 -a localhost",
    "dev": "npm-run-all --parallel watchify serve",
    "build": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > dist/build.js"
  },
  "dependencies": {
    "jquery": "^3.5.1",
    "vue": "^2.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "brfs": "^2.0.2",
    "browser-sync": "^2.26.12",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "cssnext": "^1.8.4",
    "envify": "^3.4.1",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-require-sort": "^1.2.1",
    "eslint-plugin-sort-requires": "^2.1.0",
    "eslint-plugin-vue": "^6.2.2",
    "gulp": "^3.0.1",
    "gulp-browserify": "^0.5.1",
    "gulp-file-include": "^2.2.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-slack": "^0.1.2",
    "gulp-vueify": "0.0.3",
    "html-loader": "^1.1.0",
    "http-server": "^0.9.0",
    "husky": "^4.2.5",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.4.3",
    "vueify": "9.0.0",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./pear-scripts/eslint-hook.sh && ./pear-scripts/warn-commit-deploy.sh && sleep 1",
      "pre-push": "./pear-scripts/warn-push-deploy.sh",
      "post-checkout": "git submodule update --init --recursive || true",
      "post-merge": "git submodule update --init --recursive || true"
    }
  }
}
